#the 2 bottom statusbars
#caption always "%{= wk} %{= KY} [%n]%t @ %H %{-} %= %{= KR} %l %{-} | %{= KG} %Y-%m-%d %{-} "
#hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw %=| %0c:%s "
hardstatus alwayslastline " %-Lw%{= Bw}%n%f %t%{-}%+Lw %=| %0c:%s | %Y-%m-%d | %l "

#show the current process on term title(must modify .bashrc's PS1 initial to "/033k/033// " too. next line is sample)
#PS1="\033k\033\\ ${debian_chroot:+($debian_chroot)}\[\033[01;33m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ "
shelltitle '$ |bash'

#close the start message
startup_message off

#other featres
autodetach on
vbell on

